<link href="https://cdn.quilljs.com/1.1.6/quill.snow.css" rel="stylesheet">

<div class="top-editor-container">
	<!-- Create the editor container -->
	<div id="editor">
	  <p>Hello World!</p>
	  <p>Some initial <strong>bold</strong> text</p>
