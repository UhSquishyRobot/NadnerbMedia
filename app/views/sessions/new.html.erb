<div class="login-form">
	<%= form_for(:session, url: login_path) do |f| %>
		<div class="form-group">
			<%= f.label :username %>
			<%= f.text_field :username, placeholder: 'password', autofocus: true %>
		</div>
		<div class="form-group">
			<%= f.label :password %>
			<%= f.text_field :password, placeholder: 'password' %>
		</div>
	<% end %>
</div>