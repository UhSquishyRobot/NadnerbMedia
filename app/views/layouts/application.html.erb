<!DOCTYPE html>
<html>
  <head>
    <title>NadnerbMedia</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.quilljs.com/1.1.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.1.6/quill.js"></script>
  </head>

  <body>
      <div class="container">
        <div class="header-bar-mobile">
            <span class="header-text">( Nadnerb Media )</span>
        </div>
        <div class="header-bar">
          <div class="header-text">
            <img class="portrait" src="https://i.imgur.com/t3bjat7.jpg"/>
            <%= link_to "( Nadnerb Media )", root_path %> 
          </div>
          <div class="nav-list">
            <%= link_to("https://www.linkedin.com/in/bschwarz890/") do %>
              <i class="fa fa-linkedin-square" aria-hidden="true"></i>
            <% end %>
            <%= link_to("https://github.com/UhSquishyRobot") do %>
              <i class="fa fa-github" aria-hidden="true"></i>
            <% end %>
          </div>
        </div>
        <div class="main">
          <%= yield %>
        </div>
      </div>
  </body>
</html>
